<p id="notice"><%= notice %></p>

<h1>Position Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @position_statuses.each do |position_status| %>
      <tr>
        <td><%= position_status.value %></td>
        <td><%= link_to 'Show', position_status %></td>
        <td><%= link_to 'Edit', edit_position_status_path(position_status) %></td>
        <td><%= link_to 'Destroy', position_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

